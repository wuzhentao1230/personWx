/* pages/firstpage/firstpage.wxss */
.content{
  /* 意为"弹性布局"，用来为盒状模型提供最大的灵活性 */
  display:block;
}
.head{
  opacity:0.5;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  /* 手机自适应高度 */
  height: 10vh;
  z-index: 2
}
.body{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  /* 手机自适应高度 */
  height: 60vh;
  position: relative;
}
.left{
  position:absolute;
  /* left: 10vh; */
  width: 100px;
  height:130px;
  /* border-radius: 100%; */
  animation: gogogo 10s linear infinite;
}
@keyframes xz{
  0%{transform:rotate(0deg);}
  100%{transform:rotate(360deg);}
}
@-webkit-keyframes gogogo
{
    0% { 
        background-color: #eb5C7e;
        -webkit-transform: rotate(0);
    }
    10% {
        background-color: #eb5C7e;
        -webkit-transform: rotate(0);    
    }
    30%{
        background-color: #1b9e55;
        left: 0; 
        -webkit-transform: rotate(30deg);        
    }
    50%{
        left: 50vh;
        background-color: #2a7df8;
        -webkit-transform: rotate(0);
    }
    70%{
        left: 50vh;
        background-color: #2a7df8;
        -webkit-transform: rotate(0);
    }    
    100%{ 
        left:10vh;
        background-color: #eb5C7e;
        -webkit-transform: rotate(-360deg);
    }
}
@keyframes gogogo
{
    0% { 
        background-color: #eb5C7e;
        transform: rotate(0);    
    }
    10% {
        background-color: #eb5C7e;
        transform: rotate(0);    
    }
    30%{
        background-color: #1b9e55;
        left: 0; 
        transform: rotate(30deg);        
    }
    50%{
        left: 50vh;
        background-color: #2a7df8;
        -webkit-transform: rotate(0);
    }
    70%{
        left: 50vh;
        background-color: #2a7df8;
        -webkit-transform: rotate(0);
    }    
    100%{ 
        left:10vh;
        background-color: #eb5C7e;
        -webkit-transform: rotate(-360deg);
    }
}
.right{
  position: absolute;
  right: 10vh;
  width: 100px;
  height: 100px;
  border-radius: 100%;
  animation: xz 10s linear infinite;
}
.getIn{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  /* 手机自适应高度 */
  height: 10vh;
}
.bg{
  display: block;
  position: fixed;
  /* 宽度默认750rpx */
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: -1;
  
}
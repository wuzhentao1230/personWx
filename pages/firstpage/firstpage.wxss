/* pages/firstpage/firstpage.wxss */
.content{
  /* 意为"弹性布局"，用来为盒状模型提供最大的灵活性 */
  display: block;
  width: 100vw;
  height: 100vh;
  /* background-color: black; */
  
}

.head {
  opacity: 0.5;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  /* 手机自适应高度 */
  height: 10vh;
  z-index: 2;
}

.body {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  /* 手机自适应高度 */
  height: 60vh;
  position: relative;
}

.left {
  position: absolute;
  left: 13vh;
  top: 10vh;
  width: 80px;
  height: 104px;
  border-radius: 20%;
  transform: rotate(-390deg);
  /* border-radius: 100%; */
  animation: gogogo 3s linear;
}

.right {
  position: absolute;
  right: 15vh;
  top: 10vh;
  width: 80px;
  height: 90px;
  border-radius: 20%;
  transform: rotate(30deg);
  animation: xz 5s linear;
}

.getIn {
  display: flex;
  position: absolute;
  top: 65vh;
  opacity: 0.5;
  justify-content: center;
  align-items: center;
  width: 100%;
  /* 手机自适应高度 */
  height: 10vh;
}

.leftPic {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 50px;
  height: 50px;
  border: 1px solid white;
  border-radius: 5px;
  
}

.rightView {
  position: absolute;
  top: 0px;
  right: 0px;
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid white;
  border-radius: 5px;
  background-color: black;
}

.rightPic {
  animation: xz 1s infinite alternate;
}
.bgView{
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: -1;
  /* background: linear-gradient(#043667,#568abe,rgb(119, 198, 230)); */
}
.bg {
  /* 宽度默认750rpx */
  width: 100%;
  height: 100%;
  z-index: 2;
}

@keyframes xz {
  0% {
    width: 20px;
    height: 20px;
    /* transform: rotate(180deg); */
  }


  100% {
    width: 30px;
    height: 30px;
    /* transform: rotate(180deg); */
  }
}

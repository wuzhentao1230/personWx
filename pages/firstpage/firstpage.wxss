/* pages/firstpage/firstpage.wxss */
.content{
  /* 意为"弹性布局"，用来为盒状模型提供最大的灵活性 */
  display:block;
}
.head{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  /* 手机自适应高度 */
  height: 10vh;
}
.body{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  /* 手机自适应高度 */
  height: 60vh;
  position: relative;
}
.left{
  position: absolute;
  width: 50px;
  height: 50px;
  border-radius: 100%;
  animation: xz 3s linear infinite;
}
@keyframes xz{
  0%{transform:rotate(0deg);}
  100%{transform:rotate(360deg);}
}
.right{
  position: absolute;
  width: 50px;
  height: 50px;
}
.getIn{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  /* 手机自适应高度 */
  height: 10vh;
}
.bg{
  display: block;
  position: fixed;
  /* 宽度默认750rpx */
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: -1;
  
}